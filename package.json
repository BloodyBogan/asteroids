{
    "private": true,
    "name": "asteroids",
    "version": "1.0.0",
    "description": "JavaScript rendition of the classic arcade game Asteroids.",
    "main": "./src/index.ts",
    "scripts": {
        "prepare": "husky install",
        "build": "cross-env NODE_ENV=production webpack",
        "dev": "webpack serve",
        "start": "serve public --listen 8080",
        "lint": "npm run lint:code && npm run lint:styles",
        "lint:code": "eslint '*/**/*.{mjs,js,ts}' --ignore-pattern '/public/' --quiet --fix",
        "lint:styles": "stylelint '*/**/*.scss' --quiet --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{mjs,js,ts}": [
            "eslint --fix"
        ],
        "*.{scss}": [
            "stylelint --fix"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.12.17",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.13.15",
        "@babel/plugin-transform-runtime": "^7.12.17",
        "@babel/preset-env": "^7.12.17",
        "@babel/runtime-corejs3": "^7.13.10",
        "@types/mini-css-extract-plugin": "^1.2.2",
        "@types/optimize-css-assets-webpack-plugin": "^5.0.2",
        "@types/webpack-dev-server": "^3.11.1",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "autoprefixer": "^10.2.4",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "core-js": "^3.9.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.2",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-standard": "^5.0.0",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "mini-css-extract-plugin": "^1.3.8",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "postcss": "^8.2.9",
        "postcss-loader": "^5.0.0",
        "prettier": "^2.2.1",
        "regenerator-runtime": "^0.13.7",
        "sass": "^1.32.8",
        "sass-loader": "^11.0.1",
        "stylelint": "^13.12.0",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "ts-loader": "^8.0.17",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5",
        "webpack": "^5.23.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "serve": "^11.3.2"
    },
    "author": "Michal Ka≈°tan",
    "license": "MIT"
}
